<?xml version="1.0"?>
<scpd>
	<serviceStateTable>
		<stateVariable>
			<name>CurrentTemperature</name>
			<sendEventsAttribute>yes</sendEventsAttribute>
			<dataType>i4</dataType>
			<defaultValue>2000</defaultValue>
			<shortCode>temperature</shortCode>
			<allowedValueRange>
				<minimum>0</minimum>
				<maximum>4000</maximum>
				<step>1</step>
			</allowedValueRange>
		</stateVariable>
	</serviceStateTable>
	<actionList>
		<action>
			<name>SetOutdoorTemperature</name>
			<argumentList>
				<argument>
					<name>CurrentOutdoorTemperature</name>
					<direction>in</direction>
					<relatedStateVariable>CurrentTemperature</relatedStateVariable>
				</argument>
			</argumentList>
		</action>
		<action>
			<name>SetThermostatOutdoorTemperature</name>
			<argumentList>
				<argument>
					<name>CurrentOutdoorTemperature</name>
					<direction>out</direction>
					<relatedStateVariable>CurrentTemperature</relatedStateVariable>
					<retval/>
				</argument>
			</argumentList>
		</action>
	</actionList>
</scpd>